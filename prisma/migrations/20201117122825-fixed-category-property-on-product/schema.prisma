datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  image       String?
  createdAt   DateTime  @default(now())
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  title    String    @unique
  image    String?
  products Product[]
}
